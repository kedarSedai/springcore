<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean class="com.example.testsring.AutoWire.Student"  name="student">
        <property name="firstName" value="java"/>
    </bean>

    <bean class="com.example.testsring.AutoWire.Address" name="address" autowire="constructor">
<!--        <property name="streetAddress"-->

        <constructor-arg name="streetAddress" value="12"/>
        <constructor-arg name="student" ref="student"/>
    </bean>
</beans>